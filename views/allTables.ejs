<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Backups</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* CSS for cards */
    .card {
      margin-bottom: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="mt-5 mb-4">All Backups</h1>
    <div class="row">
      <% tableData.forEach(table => { %>
        <% let tableNameParts = table.tableName.split('_'); %>
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><a href="/<%= tableNameParts[0] %>" class="card-link"><%= table.tableName %></a></h5>
              <p class="card-text">Total Objects: <%= table.count %></p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  <!-- Button for adding new backup -->
  <div class="container mt-4">
    <a href="/welcome" class="btn btn-primary">Add New Backup</a>
  </div>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

